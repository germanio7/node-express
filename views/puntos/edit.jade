extends ../layout

block content
    a.btn.btn-warning(href="/puntos") Volver
    br
    h1 Actualizar Punto
    br
    form(action="/puntos/"+punto.id+"/update", method="post")
            label(for='id') ID:
            input(type='number' name='id' value= punto.id)
            br
            label(for='name') Name:
            input(type='text' name='name' value= punto.name)
            br
            label(for='lat') Lat:
            input(type='number' name='lat' value= punto.lat)
            br
            label(for='lon') Lon:
            input(type='number' name='lon' value= punto.lon)
            br
            button.btn.btn-success(type="submit" onclick="return confirm('¿Desea actualizar el punto de interés?')") Actualizar